@using Cervantes.Arquisoft.View.Models
@model LoginClientViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header text-center">
                    <h4><i class="bi bi-person-circle"></i> Iniciar Sesión (Cliente)</h4>
                </div>
                <div class="card-body">
                    <div class="text-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <form asp-action="Index">
                        <div class="form-group">
                            <label asp-for="Mail" class="control-label">Mail</label>
                            <input asp-for="Mail" class="form-control" placeholder="Ingrese el correo electrónico" />
                            <span asp-validation-for="Mail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Contraseña</label>
                            <input asp-for="Password" class="form-control" placeholder="Ingrese la contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="m-3 form-group">
                            <button type="submit" class="btn btn-primary">Ingresar</button>
                            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancelar</a>
                            <a class="btn btn-link" asp-controller="LoginClient" asp-action="RecoverPass">Recuperar contraseña</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}