@using Cervantes.Arquisoft.View.Models;
@model ProjectViewModel

@{
    ViewData["Title"] = "Edit";
}
<partial name="~/Views/Shared/Partials/_NavbarUser.cshtml" />

<h1 class="mb-4">Editar Proyecto: @Model.Name</h1>
<h5 class="mb-4">Descripción de esta función</h5>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nombre del Proyecto</label>
                <input asp-for="Name" class="form-control" placeholder="Nombre del Proyecto" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Budget" class="control-label">Presupuesto</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="Budget" class="form-control text-right" placeholder="0.00" />
                    <span asp-validation-for="Budget" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ClientList" class="form-label">Clientes</label>
                <select asp-for="ClientValue" class="form-control">
                    <option value="">Seleccione un cliente</option>
                    @foreach (var client in Model.ClientList)
                    {
                        <option value="@client.ClientId">@($"{client.LastName}, {client.Name}")</option>
                    }
                </select>
                <span asp-validation-for="ClientList" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UserList" class="form-label">Usuarios</label>
                <select asp-for="UserValue" class="form-control">
                    <option value="">Seleccione un usuario</option>
                    @foreach (var user in Model.UserList)
                    {
                        <option value="@user.UserId">@($"{user.LastName}, {user.Name}")</option>
                    }
                </select>
                <span asp-validation-for="UserList" class="text-danger"></span>
            </div>

            




            <div class="mb-3">
                <label asp-for="ProjectTypeList" class="form-label">Tipo de Proyecto</label>
                <select asp-for="ProjectTypeValue" class="form-control">
                    <option value="">Seleccione un tipo de proyecto</option>
                @foreach (var projectType in Model.ProjectTypeList)
                {
                        <option value="@projectType.ProjectTypeId">@projectType.ProjectTypeName</option>
                }
                </select>
                <span asp-validation-for="ProjectTypeList" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProjectStateList" class="form-label">Estado</label>
                <select asp-for="ProjectStateValue" class="form-control">
                    <option value="">Seleccione un estado</option>
                @foreach (var projectState in Model.ProjectStateList)
                {
                        <option value="@projectState.ProjectStateId">@projectState.Description</option>
                }
                </select>
                <span asp-validation-for="ProjectStateList" class="text-danger"></span>
            </div>


        </div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>
