@{
    ViewData["Title"] = "Home Page";
}

<style>
    #hidenav {
        display: none;
    }

    .background-container {
        background-image: url(./img/back.jpg);
        background-size: cover;
        background-position: center;
        position: relative;
        width: 100%;
        height: 100%;
    }

    .glassmorphism {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.5); /* Color del fondo con opacidad */
        padding: 20px;
        border-radius: 10px;
    }

    .title {
        color: #fff; /* Color del texto */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Sombra del texto */
        font-size: 3rem; /* Tamaño del texto */
        font-weight: bold; /* Grosor del texto */
        margin-bottom: 20px; /* Espacio inferior */
        text-transform: uppercase; /* Convertir texto en mayúsculas */
        letter-spacing: 2px; /* Espaciado entre caracteres */
        padding: 10px; /* Espaciado interior */
        background-color: rgba(0, 0, 0, 0.5); /* Color de fondo con opacidad */
        border-radius: 10px; /* Radio de borde */
    }

    .card {
        transition: transform 0.3s;
        cursor: pointer;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card:active {
            transform: scale(0.95);
        }

    .card-title {
        font-size: 1rem;
    }

    .card-text {
        font-size: 0.8rem;
    }

</style>

<div class="background-container">
    <div class="glassmorphism p-5">
        <div class="text-center">
            <h1 class="display-1 title">Arquisoft</h1>
            <hr />
            <br />
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="card" onclick="window.location.href='@Url.Action("Index", "LoginUser")'">
                        <img src="./img/user.jpg" class="card-img-top" alt="Descripción de la imagen">
                        <div class="card-body">
                            <h5 class="card-title text-center title">Usuario</h5>
                            <p class="card-text d-none d-md-block text-center">Gestión de información relevante sobre los proyectos, cobros y tareas. Seguimiento de los productos y servicios ofrecidos.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="card" onclick="window.location.href='@Url.Action("Index", "LoginClient")'">
                        <img src="./img/client.jpg" class="card-img-top" alt="Descripción de la imagen">
                        <div class="card-body">
                            <h5 class="card-title text-center title">Cliente</h5>
                            <p class="card-text d-none d-md-block text-center">Podrá hacer seguimiento al avance de su proyecto, y recibir información importante sobre los productos y servicios ofrecidos</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

}
