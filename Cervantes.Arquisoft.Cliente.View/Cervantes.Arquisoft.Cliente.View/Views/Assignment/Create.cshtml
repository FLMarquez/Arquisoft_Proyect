@model Cervantes.Arquisoft.View.Models.AssignmentViewModel

@{
    ViewData["Title"] = "Agregar una Tipo de Tarea";
}
<partial name="~/Views/Shared/Partials/_NavbarUser.cshtml" />

<h1>Agregar Tipos de Tarea</h1>
<h5>Permite agregar nuevas categorías</h5>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create">
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="AssignmentName" class="control-label">Nombre del Tipo Tarea</label>
                <input asp-for="AssignmentName" class="form-control" placeholder="Nombre del Tipo Tarea" />
                <span asp-validation-for="AssignmentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AssignmentDescription" class="control-label">Descripción</label>
                <input asp-for="AssignmentDescription" class="form-control" style="height: 80px; resize: vertical; overflow-y: auto;" placeholder="Descripción del Tipo de Tarea" />
                <span asp-validation-for="AssignmentDescription" class="text-danger"></span>
            </div>

           

        </div>
    </div>
    <div class="form-group m-3">
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

