@using Cervantes.Arquisoft.View.Models;
    
@model Cervantes.Arquisoft.View.Models.AssignmentTypeViewModel

@{
    ViewData["Title"] = "Agregar una Tipo de Tarea";
}
<partial name="~/Views/Shared/Partials/_NavbarUser.cshtml" />

<h1>Agregar Tipos de Tarea</h1>
<h5>Agregar nuevas tareas para este servicio</h5>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create">
    <input type="hidden" asp-for="ServiceTypeId" />
    <input type="hidden" asp-for="ServiceTypeName" />
    <div class="row">
        <div class="col-md-6">

            <div class="form-group">
                <label asp-for="AssignmentTypeName" class="control-label">Nombre del Tipo Tarea</label>
                <input asp-for="AssignmentTypeName" class="form-control" placeholder="Nombre del Tipo Tarea"/>
                <span asp-validation-for="AssignmentTypeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AssignmentTypeDescription" class="control-label">Descripción</label>
                <textarea asp-for="AssignmentTypeDescription"  type="text" class="form-control" rows="5" placeholder="Descripción del Tipo de Tarea"></textarea>
                <span asp-validation-for="AssignmentTypeDescription" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group m-3">
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="AssignmentType" asp-route-id="@Model.ServiceTypeId">Cancelar</a>
    </div>
</form>

